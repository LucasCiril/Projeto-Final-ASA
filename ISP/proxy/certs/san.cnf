[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
distinguished_name = dn
req_extensions     = req_ext
x509_extensions    = req_ext

[ dn ]
C  = BR
ST = RN
L  = Natal
O  = Cirilo
OU = Natal Central
CN = asa.br

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
# Zona do ISP
DNS.1 = asa.br
DNS.2 = *.asa.br

# Zona Cliente 1
DNS.3 = sova.br
DNS.4 = *.sova.br

# Zona Cliente 2
DNS.5 = jett.br
DNS.6 = *.jett.br

# Acessos locais / testes
DNS.7 = localhost
IP.1  = 127.0.0.1